{
	"parser": "@typescript-eslint/parser",
	"extends": ["prettier"],
	"ignorePatterns": ["*.log"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"env": {
		"node": true
	},
	"globals": {
		"NODE_ENV": true,
		"isProduction": true,
		"__ROUTE__": true
	},
	"rules": {
		"max-classes-per-file": "off",
		"no-console": "error",
		"no-unused-vars": "error"
	},
	"overrides": [
		{
			"files": ["src/scripts/*.ts", "src/views/*.ts", "src/types/**/*.ts"],
			"rules": {
				"no-console": "off",
				"no-unused-vars": "off",
				"quotes": "off",
				"@typescript-eslint/quotes": "off"
			}
		}
	]
}
