{
	"compilerOptions": {
		"baseUrl": ".",
		"incremental": true,
		"lib": ["es5", "es6"],
		"target": "es2019",
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "build",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"typeRoots": ["./src/app/types", "./node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
