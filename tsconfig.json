{
	"baseUrl": "./src",
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "es6",
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "build",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"typeRoots": ["./@types", "./node_modules/@types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
