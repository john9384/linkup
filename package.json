{
	"name": "linkup-backend",
	"version": "1.0.0",
	"main": "src/bin/www/server.ts",
	"repository": "https://github.com/john9384/linkup-backend.git",
	"author": "John Damilola Ogungbure <jogungbure@gmail.com>",
	"license": "MIT",
	"scripts": {
		"start": "npm run build && npm run serve",
		"serve": "node -r dotenv/config build/bin/www/server.js ",
		"build": "npm run clean && npm run build-ts",
		"build-ts": "tsc",
		"watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
		"watch-node": "nodemon build/bin/www/server.js",
		"watch-ts": "tsc -w",
		"clean": "rimraf ./build",
		"test": "ENV_FILE=./.env.test jest --detectOpenHandles",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"ci": "yarn lint && yarn test",
		"copy-assets": "ts-node scripts/copy_assets.ts"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-list-endpoints": "^6.0.0",
		"fs-extra": "^10.1.0",
		"helmet": "^6.0.0",
		"i18next": "^21.9.1",
		"i18next-fs-backend": "^1.1.5",
		"i18next-http-middleware": "^3.2.1",
		"joi": "^17.6.0",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.21",
		"method-override": "^3.0.0",
		"mongodb": "^4.7.0",
		"mongoose": "^6.4.3",
		"morgan": "^1.10.0",
		"nodemailer": "^6.7.5",
		"nodemailer-smtp-transport": "^2.7.4",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.3",
		"winston": "^3.7.2",
		"winston-daily-rotate-file": "^4.7.1"
	},
	"devDependencies": {
		"@types/cookie-parser": "^1.4.3",
		"@types/express-list-endpoints": "^6.0.0",
		"@types/i18next-fs-backend": "^1.1.2",
		"@types/jest": "^28.1.6",
		"@types/method-override": "^0.0.32",
		"@typescript-eslint/eslint-plugin": "^5.20.0",
		"@typescript-eslint/parser": "^5.20.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/lodash": "^4.14.182",
		"@types/morgan": "^1.9.3",
		"@types/nodemailer-smtp-transport": "^2.7.5",
		"eslint": "^8.13.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"husky": "^7.0.4",
		"jest": "^28.1.3",
		"mongoose-seed": "^0.6.0",
		"prettier": "^2.7.1",
		"ts-jest": "^28.0.7",
		"concurrently": "^7.3.0"
	}
}
